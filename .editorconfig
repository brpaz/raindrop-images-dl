root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.go]
indent_size = 2

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[*.nix]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[Dockerfile]
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false
eclint_indent_style = unset
